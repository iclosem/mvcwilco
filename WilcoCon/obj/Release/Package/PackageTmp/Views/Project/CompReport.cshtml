@model IEnumerable<WilcoCon.Models.PayrollReport>
@{
    ViewBag.Title = "Compensation Reports";
}

<h2>@ViewBag.Title</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <text>Filter by Week End Date: </text>@Html.DropDownList("WeekEndDate", new SelectList(ViewBag.WeekEndDates))
    <input type="submit" value="Search" />
}
<div class="container-fluid" style="max-width:100%">
    <img src="~/Content/Images/HeaderImageEEOCReport.PNG" style="max-width:100%" />
</div>

<table class="table table-bordered">
    <tr>
        <td><b>Part A- Date</b></td>
    </tr>
    <tr>
        <td>
            This report is for the work period ending: @ViewBag.Date
        </td>
    </tr>
</table>
<table class="table table-bordered">
    <tr>
        <th>
            <b>Part B- Project Information</b>
        </th>
        <th>
            <b>Part C - Contractor Information</b>
        </th>
    </tr>
    <tr>
        <th>
            Project Number
        </th>
        <th>
            ContractorNumber
        </th>
    </tr>
    <tr>
        <td>
            @ViewBag.ProjectNumber
        </td>
        <td>
            31-0646843
        </td>
    </tr>
    <tr>
        <th>
            Project Location
        </th>
        <th>
            Name and Location of Contractor(include County)
        </th>
    </tr>
    <tr>
        <td>
            @ViewBag.ProjectLocation
        </td>
        <td>
            Wilco Construction Company <br />
            Knockemstiff, OH <br />
            Ross County
        </td>
    </tr>
    <tr>
        <th>
            EEOC Compliance Certificate Expires on:
        </th>
        <th>
            Project Description
        </th>
    </tr>
    <tr>
        <td>
            December 31, 2014
        </td>
        <td>
            @ViewBag.ProjectDescription
        </td>
    </tr>
</table>
<table class="table table-striped table-hover">
    <tr>
        <th>
            Part D- Regular Hours
        </th>
    </tr>
    <tr>
        <th>
            Employee Number
        </th>
        <th>
            Skill Code
        </th>
        <th>
            Rate
        </th>
        <th>
            Fringe
        </th>
        <th>
            Total
        </th>
        <th>
            Hours
        </th>
        <th>
            Gross
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SkillCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fringe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gross)
            </td>
            
                
            @*<td>
                @Html.DisplayFor(modelItem => item.PercentageJobHoursWorkedFemale)
            </td>*@
        </tr>  
    }
    <tr>
        <th>
            Part E- Overtime Hours
        </th>
    </tr>
    <tr>
        <th>
            Employee Number
        </th>
        <th>
            Skill Code
        </th>
        <th>
            Rate
        </th>
        <th>
            Fringe
        </th>
        <th>
            Total
        </th>
        <th>
            Hours
        </th>
        <th>
            Gross
        </th>
    </tr>
    @foreach(var item in Model)
    {
        if (item.OTHours != 0)
        { 
     <tr>
         <td>
             @Html.DisplayFor(modelItem => item.EmployeeId)
         </td>
         <td>
             @Html.DisplayFor(modelItem => item.SkillCode)
         </td>
         <td>
             @Html.DisplayFor(modelItem => item.OTRate)
         </td>
         <td>
             @Html.DisplayFor(modelItem => item.Fringe)
         </td>
         <td>
             @Html.DisplayFor(modelItem => item.OTTotal)
         </td>
         <td>
             @Html.DisplayFor(modelItem => item.OTHours)
         </td>
         <td>
             @Html.DisplayFor(modelItem => item.OTGross)
         </td>
     </tr>   
    }
    }
</table>
<table class="table table-bordered">
    <tr>
        <th><b>Part F- Compliance Officer Signature</b></th>
        <th><b>Send Completed Form to:</b></th>
    </tr>
    <tr>
        <td>
            <b>Name: </b> Mary Wilson <br />
            <b>Telephone: </b> 614-555-0386 <br />
            <br />
            <br />
