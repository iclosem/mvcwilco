@model IEnumerable<WilcoCon.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            Customer Id
        </th>
        <th>
            First name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Email
        </th>
        <th>
            Phone
        </th>
        <th>
            Payment Terms
        </th>
        <th>
            Billing Address
        </th>
        <th>
            Billing City
        </th>
        <th>
            Billing State
        </th>
        <th>
            Billing Zip
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaymentTerms)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BillingAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BillingCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BillingState)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BillingZip)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.EmployeeId }) |
            @Html.ActionLink("Details", "Details", new { id=item.EmployeeId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EmployeeId })  |
            @Html.ActionLink("Weekly Report", "EmployeePay", new { id = item.EmployeeId })*@
            <div class="btn-group">
                <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                    Action <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li>@Html.ActionLink("Edit", "Edit", new { id = item.CustomerId })</li>
                    <li>@Html.ActionLink("Details", "Details", new { id = item.CustomerId })</li>
                    <li>@Html.ActionLink("Delete", "Delete", new { id = item.CustomerId })</li>
                </ul>
            </div>
        </td>
    </tr>
}

</table>
