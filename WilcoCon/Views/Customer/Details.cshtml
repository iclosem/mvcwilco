<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Customer.CustomerId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
<br />
<h3>List of Projects from this Customer</h3>
<table class="table table-striped table-hover">
    <tr>
        <th>
            Project Number
        </th>
        <th>
            Active?
        </th>
    </tr>
@foreach (var item in Model.Projects)
{
    <tr>
        <td>
            <a href="/Project/Details/@item.ProjectId">@Html.DisplayFor(modelItem => item.ProjectNumber)</a>
        </td>
        <td>
            @Html.YesNo(item.Active)
        </td>
    </tr>
}
</table>
<h3>Create a new project:</h3>
<p><a class="btn btn-info" href="/Project/Create">Create &raquo;</a></p>