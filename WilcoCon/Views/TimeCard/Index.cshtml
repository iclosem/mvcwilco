@model IEnumerable<WilcoCon.Models.TimeCard>

@{
    ViewBag.Title = "Index";
}

<h2>Timecards</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.ActionLink("Date", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>
        <th>
            Time In
        </th>
        <th>
            Time Out
        </th>
        <th>
            First Name
        </th>
        <th>
            @Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            Skill Code
        </th>
        <th>
            @Html.ActionLink("Project Number", "Index", new { sortOrder=ViewBag.ProjectNumParm})
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeIn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeOut)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobClassification.SkillCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Project.ProjectNumber)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.TimeCardId }) |
            @Html.ActionLink("Details", "Details", new { id=item.TimeCardId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TimeCardId })*@
            <div class="btn-group">
                <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                    Action <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li>@Html.ActionLink("Edit", "Edit", new { id = item.TimeCardId })</li>
                    <li>@Html.ActionLink("Details", "Details", new { id = item.TimeCardId })</li>
                    <li>@Html.ActionLink("Delete", "Delete", new { id = item.TimeCardId })</li>
                    
                </ul>
            </div>
        </td>
    </tr>
}

</table>
